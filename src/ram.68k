	* Neogeo: needs different writable section from ROM code
    .bss
	.endif

	.align	4
	.skip	0x800
user_stack_top:

	.skip	0x100		| stack size for main process
stack_top:
	.skip	0x100*32		| 256 bytes for each task natively (originally 16 bytes only)
	
ram_buffer:
	.ifeq	OPT_ALIGNED_MEMORY
	.skip	0x8000
rom_buffer:
	.skip	0x10000-0x8000
	.else
dev_ram_buffer:
	.skip	0x20000
ram_start_0000:
	.long	0
	.endif

	

high_score_beaten:
	.word	0

	

